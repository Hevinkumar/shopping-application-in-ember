{{!-- {{yield}} --}}
<div class="body">
<div class="signup">
    <div class="container">
            <div class="forms">
                <div class="form input">
                    <span class="header">Sign up</span>
                    <form action="" onsubmit={{action "onsubmit"}} target="_self" autocomplete="on" enctype="multipart/form-data" >
                        <div class="input-group">
                            <!-- <label username="email" class="label">Email:</label> -->
                            {{!-- <input type="text" id="sign_user"  placeholder="Enter Your name"> --}}
                            <input type="text" class="name" id="sign_user" name="name" placeholder="Enter Your name" required onchange={{action "onchange"}} value={{this.user.name}}>
                            <i class="uil uil-user icon"></i>
                            <span class="error-message"></span>
                        </div>
                        <div class="input-group">
                            <!-- <label username="email" class="label">Email:</label> -->
                            {{!-- <input type="email" id="sign_email" placeholder="Enter Your Email"> --}}
                            <input type="email" class="name" id="name" name="email"placeholder="Enter Your Email" required onchange={{action "onchange"}} value={{this.user.email}}>
                            <i class="uil uil-envelope icon"></i>
                            <span class="error-message"></span>
                        </div>
                        <div class="input-group">
                            <!-- <label username="email" class="label">Email:</label> -->
                            {{!-- <input type="email" id="sign_email" placeholder="Enter Your Email"> --}}
                            <input type="number" class="" id="name" name="phone" placeholder="Enter Your Mobile number" required onchange={{action "onchange"}} value={{this.user.phone}}>
                            <i class="uil uil-phone icon"></i>
                            <span class="error-message"></span>
                        </div>
                        <div class="input-group">
                            <!-- <label username="password" class="label">Password:</label> -->
                            {{!-- {{#if icon1 }} type="password" {{else}} type="text"{{/if}} --}}
                            <input type="{{this.icon1}}" class="" id="name" name="password" placeholder="Enter Your password" required onchange={{action "onchange"}} value={{this.user.password}}>
                            <i class="uil uil-lock icon"></i>
                            {{#if iconView1}}
                                <i class="uil uil-eye-slash r-showHidePw" onclick={{action "iconChange1"}}></i>
                            {{else}}
                                <i class="uil uil-eye r-showHidePw" onclick={{action "iconChange1"}}></i>
                            {{/if}}
                            <span class="error-message"></span>
                        </div>
                        <div class="input-group">
                            <!-- <label username="password" class="label">Password:</label> -->
                            <input type="{{this.icon2}}" class="" id="" name="confirmPassword" placeholder="Enter Your Confirm Password" required onchange={{action "onchange"}} value={{this.user.confirmPassword}}>
                            <i class="uil uil-lock icon"></i>
                            {{#if iconView2}}
                                <i class="uil uil-eye-slash r-showHidePw" onclick={{action "iconChange2"}}></i>
                            {{else}}
                                <i class="uil uil-eye r-showHidePw" onclick={{action "iconChange2"}}></i>
                            {{/if}}
                            
                            <span class="error-message"></span>
                        </div>
                        <div class="input-group button">
                            <input type="submit" class="inputSubmit" value="Signup">
                        </div>
                    </form>
                    <div class="sign-up">
                        <span>You already have an account? {{link-to "Login here" "login_page" class="text"}}</span>
                    </div>

                </div>
            </div>
        </div>
</div>
</div>


